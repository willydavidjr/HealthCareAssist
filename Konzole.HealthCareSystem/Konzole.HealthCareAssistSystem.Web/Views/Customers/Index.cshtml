@model IEnumerable<Konzole.HealthCareAssistSystem.Customer>
@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">


                        @using (Html.BeginForm())
                        {


                            <div class="form-group">
                                <label class="col-lg-1" style="width:110px;">UOM Name</label>
                                @Html.TextBox("CustomerName", "", new { @class = "form-control col-lg-9", @style = "width:200px;" })
                            </div>

                                <div class="form-group">
                                    <input type="submit" class="form-control btn btn-success" style="width:120px;" value="Search" />
                                </div>
                                <div class="form-group">

                                    @Html.ActionLink("Create", "Create", new { controller = "Customers" }, htmlAttributes: new { @class = "btn btn-success" })
                                </div>
                                <span class="loaders reports-load"></span>
                                <table class="table table-striped table-bordered table-hover" id="dataTables-transactionLogs">
                                    <thead>
                                        <tr>
                                            <th>&nbsp; </th>
                                            <th>Customer Name </th>
                                            <th>Address </th>
                                            <th>Contact </th>
                                            <th>TIN </th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblTrans-Body">
                                        @foreach (var row in Model)
                                        {
                                            <tr>
                                                <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = row.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = row.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = row.Id })
                                                </td>
                                                <td class="center">@row.Name</td>
                                                <td>@row.Address</td>
                                                <td>@row.Contact</td>
                                                <td>@row.TIN</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                        }
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
@*@Scripts.Render("~/Content/scripts/custom/transactionLog.js")*@
<script type="text/javascript">

        $('#dataTables-transactionLogs').DataTable({
            responsive: true
        });
</script>
