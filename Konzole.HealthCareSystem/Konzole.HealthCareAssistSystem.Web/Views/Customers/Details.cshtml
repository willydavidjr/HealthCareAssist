@model Konzole.HealthCareAssistSystem.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title </h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Supplier Details
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Supplier Id:</label>
                                @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Supplier Name:</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Supplier Address:</label>
                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Supplier Contact:</label>
                                @Html.TextBoxFor(model => model.Contact, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>
                           

                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                        <!-- /.col-lg-12 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-10 -->
        <div class="col-lg-2">
            &nbsp;
        </div>
        <!-- /.col-lg-2 -->
    </div>
    <!-- /.row -->
</div>