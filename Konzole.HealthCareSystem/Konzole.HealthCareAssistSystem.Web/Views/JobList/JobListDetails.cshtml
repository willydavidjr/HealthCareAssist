@model Konzole.HealthCareAssistSystem.Entities.JobList

@{
    ViewBag.Title = "Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Job Details
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                           
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Job Name:</label>
                                @Html.TextBoxFor(model => model.JobName, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Job Description:</label>
                                @Html.TextAreaFor(model => model.JobDescription, new { @class = "form-control", @style = "width:350px;height:300px; ", @readonly = "readonly" })
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4" style="text-align:right; font-weight:normal;">Job Status:</label>
                                @Html.TextBoxFor(model => model.Status, new { @class = "form-control", @style = "width:350px", @readonly = "readonly" })
                            </div>


                            <div class="form-group">
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info btn-lg" })
                            </div>
                        </div>
                        <!-- /.col-lg-12 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-10 -->
        <div class="col-lg-2">
            &nbsp;
        </div>
        <!-- /.col-lg-2 -->
    </div>
    <!-- /.row -->
</div>