
@model IEnumerable<Konzole.HealthCareAssistSystem.Supplier>
@{
    ViewBag.Title = "Supplier Details";
   
}
<div id="page-wrapper">
        
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="dataTable_wrapper">
                          

                            @using (Html.BeginForm())
                            {
                                <div class="form-group">
                                    @Html.ActionLink("Add New", "Create", new { controller = "Supplier" }, htmlAttributes: new { @class = "btn btn-success" })

                                    <input type="submit" class="form-control btn btn-success" style="width:120px;" value="Export" name="action" /> 
                                </div>
     

                                <div class="form-group">
                                    <label class="col-lg-1" style="width:110px;">Supplier (optional)</label>
                                    @Html.TextBox("SupplierName","", new { @class = "form-control col-lg-9", @style = "width:200px;" })
                                  </div>

                                <div class="form-group">
                                    <input type="submit" class="form-control btn btn-primary" style="width:120px;" value="Search" name="action" /> 
                                 </div>

                                <div class="form-group">
                                    <label class="col-lg-1" style="width:110px;">Status</label>
                                    @Html.TextBox("Status", "", new { @class = "form-control col-lg-9", @style = "width:200px;" })
                                </div>


                                <span class="loaders reports-load"></span>
                                <table class="table table-striped table-bordered table-hover" id="dataTables-transactionLogs">
                                    <thead>
									    <tr>
                                            <th>&nbsp; </th>
										    <th>SupplierName </th>
										    <th>Address </th>
										    <th>Contact </th>
										    <th>Email </th>
                                            <th>Date Created </th>
										    <th>Status </th>
									    </tr>
								    </thead>
								    <tbody id="tblTrans-Body">
                                        @foreach (var row in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id = row.Id }) |
                                                    @Html.ActionLink("Details", "Details", new { id = row.Id }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id = row.Id })
                                                </td>
                                                <td class="center">@row.SupplierName</td>
                                                <td>@row.Address</td>
                                                <td>@row.Contact</td>
                                                <td>@row.Email</td>
                                                <td>@row.Recdate</td>
                                                <td>@row.Status</td>
                                              
                                            </tr>
                                        }
								    </tbody>    
                                </table>
                            }
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
    @*@Scripts.Render("~/Content/scripts/custom/transactionLog.js")*@
    <script type="text/javascript">
       
        $('#dataTables-transactionLogs').DataTable({
            responsive: true
        });
    </script>
